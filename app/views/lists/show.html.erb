
<h2> <%= @list.name %> </h2>


<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img rounded-top img-fluid' %>
  <h5> <%= movie.title %> * <%= movie.rating %> </h5>
  <p> <%= movie.overview %> </p>
  <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list?"}, class: "btn btn-danger" %>

<% end %>


<%=link_to "Back", lists_path %>

 <h1> Create a bookmark </h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit %>
  <% end %>
