
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3><span id="banner-typed-text"></span></h3>
  </div>
</div>



<div class="container text-center">

  <div class="row">
    <div class="col-12 m-2">
      <h3> My Lists </h3>
    </div>
  </div>

  <div class="row">
      <% @lists.each do |list| %>
      <div class="col-3 d-flex justify-content-center mb-3" style="height: 200px;">
        <div class="list-card d-flex align-items-center justify-content-center" style="width: 24rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <div >
              <%=link_to list.name, list %>
            </div>
        </div>
      </div>
      <% end %>
  </div>

</div>






